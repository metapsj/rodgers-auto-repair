{
  "name": "rodgers-auto-repair",
  "version": "1.0.0",
  "description": "a landing page website for rodgers auto repair",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch-css": "postcss src/styles/main.css -i assets/styles/main.css -w",
    "build-css": "postcss src/styles/main.css -o assets/styles/main.css",
    "watch-js": "echo \"Error: watch-js is not defined",
    "debug-js": "echo \"Error: debug-js is not defined",
    "build-js": "echo \"Error: build-js is not defined",
    "start": "concurrently \"npm:watch-css\" \"npm:watch-js\"",
    "dev": "concurrently \"npm:watch-css\" \"npm:watch-js\"",
    "copy": "copyfiles src/index.html \"assets/**/*\" dist",
    "deploy": "npm run build-css && npm run build-js && npm run copy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metapsj/rodgers-auto-repair.git"
  },
  "author": "metapsj",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/metapsj/rodgers-auto-repair/issues"
  },
  "homepage": "https://github.com/metapsj/rodgers-auto-repair#readme",
  "dependencies": {
    "tailwindcss": "^2.2.16"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^4.0.3",
    "concurrently": "^6.3.0",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.0.8",
    "esbuild": "^0.13.3",
    "postcss": "^8.3.8",
    "postcss-cli": "^9.0.1",
    "postcss-import": "^14.0.2"
  }
}
